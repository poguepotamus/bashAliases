# T2.Lshell
# requirements -
  # Linux Shell

# import -

# notes -
  # Functions that are useful in other programs, can be imported by using the command below
# . "$programsFolder"/xinfo

# code -
  getx () {
    x=""
    read -p "$1" -n 1 x; while read -n 1 -t .01 y; do x="$x$y"; done
    echo " "
  }

  getyn () {
    yn=""
    getx "[y/n]: "
    case $x in
      y|Y|n|N)
        yn=$x
      ;;
      q|Q)
        quitProgram
      ;;
      *)
        echo "You can either say y for yes, or n for no. Please try again. [q] to quit"
      ;;
    esac
  }
  
  quitProgram () {
    kill -INT $$
    clear
  }
