#!/bin/bash
# T=2.L=shell
# requirements -

# import -

# notes -

# code -
  # FUNCTIONS
  xhelpDisplay () {
    echo "
    xprograms:
      xbat -
        Used to display battery information

      xchrome -
        A terminal user interface for the chromium web browser

      xeditBash -
        A terminal user interface to help edit the bash scripts and aliases

      xnew -
        An addon to xeditBash, which helps create new bash scripts and bash
          files with a single command

      Use <command> -h to see more on the command
    "
  }

  if [[ $# -eq 0 ]]; then # If there are 0 arguments - i.e. only the script name
    xhelpDisplay
  fi
  while [[ $# -gt 0 ]]; do # While there are more than 0 arguments
    key="$1"
    case $key in
      *)
        xhelpDisplay
      ;;
    esac
    shift
  done
