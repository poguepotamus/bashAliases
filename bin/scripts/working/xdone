#!/bin/bash
# T2.Lshell
# requirements -

# import -

# notes -

# code -
  doneHelp () {
    echo "
      -h|--help
        Displays this help message

      <default>
        With no argument, here should be said what happens lol xd
    "
  }

  if [[ $# -eq 0 ]]; then # If there are 0 arguments - i.e. only the script name
    doneHelp
  fi
  while [[ $# -gt 0 ]]; do # While there are more than 0 arguments
    key="$1"
    case $key in
      -b|--bash)
        if [[ -e /home/alex/customBash/working/"$2" ]]; then
          cp -i /home/alex/customBash/working/"$2" /home/alex/customBash/"$2"
        fi
        case $3 in
          -d|--delete|-done)
            rm /home/alex/customBash/working/"$2"
          ;;

          *)
          ;;
        esac; shift; shift
      ;;

      -s|--script)
        if [[ -e /home/alex/customBash/scripts/working/"$2" ]]; then
          cp -i /home/alex/customBash/scripts/working/"$2" /home/alex/customBash/scripts/"$2"
        fi
        case $3 in
          -d|--delete|--done)
            rm /home/alex/customBash/scripts/working/"$2"
          ;;

          *)
          ;;
        esac; shift; shift
      ;;

      -h|--help)
        doneHelp
      ;;

      *)
        doneHelp
      ;;
    esac; shift
  done
