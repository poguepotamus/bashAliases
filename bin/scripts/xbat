#!/bin/bash
# T2.Lshell
# requirements -
  # upower

# import -

# notes -
  # Displays the battery output and its status

# code -
  xbatHelp () {
    echo "xbat:
      -i, --info
        Displays the full upower command and tons of info about the battery_BAT1

      -h, --help
        Displays this help message

      <default>
        With no argument, xbat displays a trunkated set of info that the user is more interested in


    "
  }

  if [[ $# -eq 0 ]]; then
    $b1;upower -i /org/freedesktop/UPower/devices/battery_BAT1| grep -E "state|to\ full|percentage"
  fi; while [[ $# -gt 0 ]]; do
    key="$1"
    case $key in
      -i|--info)
        upower -i /org/freedesktop/UPower/devices/battery_BAT1
      ;;

      -h|--help)
        xbatHelp
      ;;

      *)
        xbatHelp
      ;;
    esac
    shift
  done
