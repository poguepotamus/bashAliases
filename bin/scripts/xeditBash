#!/bin/bash
# T2.Lshell
# requirements -

# import -

# notes -

# code -
  bashAliasesFile="/home/alex/customBash"

  xeditBashHelp () {
    echo "script
      -a, --atom
        Opens the bashAliases file only and in atom

      -g, --geany
        Opens the bashAliases file only and in geany

      -p, --project
        Opens the bashAliases folder allowing access to other files. Useful for script editing

      -v, -q, --vim, --quick
        Opens the bashAliases file in the quickest way, vim

      -h, --help
        Displays this help message

      <default>
        This is the same as the --project, opens up bashAliases folder in atom for more editing in project fashion
    "
  }

  if [[ $# -eq 0 ]]; then # If there are 0 arguments - i.e. only the script name
    atom "$bashAliasesFile"
  fi; while [[ $# -gt 0 ]]; do # While there are more than 0 arguments
    key="$1"
    case $key in
      -a|--atom)
        atom ""$bashAliasesFile"/bashAliases"
      ;;

      -g|--geany)
        geany ""$bashAliasesFile"/bashAliases"
      ;;

      -p|--project)
        atom ""$bashAliasesFile""
      ;;

      -v|-q|--vim|--quick)
        vim ""$bashAliasesFile"/bashAliases"
      ;;

      -h|--help)
        xeditBashHelp
      ;;

      *)
        xeditBashHelp
      ;;
    esac
    shift
  done
