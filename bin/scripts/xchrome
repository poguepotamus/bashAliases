#!/bin/bash
# T2.Lshell
# requirements -
  # chromium
  # hangouts extension

# import -
  programsFolder="/home/alex/customBash/bin"
. "$programsFolder"/xinfo
# . "$programsFolder"/xinfo


# notes -
  # Easy access to websites via a terminal alias. This allows for aliases to be binded to specific "panels" i.e. The communications panel open up emails and other things that I use to communicate with the outside world, and the only thing needed to open it is typing 'xchrome -c' into a terminal with chrome open.

# code -
  user=0
# Misc
  music="https://play.google.com/music/"

# Planning
  keep="https://keep.google.com/u/0/"
  calendar="https://calendar.google.com/calendar/"
  habitica="https://habitica.com"
  toggl="https://toggl.com/app/timer"

# Communications
  inbox () {
    chromium "https://inbox.google.com/u/"$1"/#inbox"
  }
  gmail () {
    chromium "https://mail.google.com/mail/u/"$1"/#inbox"
  }
  ymail="https://mail.yahoo.com/"
  slack="https://devict.slack.com/"
  discord="https://discordapp.com/channels/@me"

  chromeHelp () {
    echo "xchrome:
      -b, --booga
        Opens the opening panel for an xchrome setup, this includes both a communications panel and a planning panel

      -c, --comms, --communications
        Launches a preset that includes all communications sites

      --grip
        Opens straight to http://localhost:6419/ for grips markdown preview

      -g, --gmail \$1
        Launches chrome into gmail with the specified user ID

      -ha, --hangouts, -H
        Opens up the hangouts chrome application

      -i, --inbox \$1
        Launches chrome into inbox with the specified user ID

      -m, --music
        Launches chrome into google play music

      -n, --new
        Launches a new chrome window. The same as `xchrome`

      -p, --plan, --planning
        Launches a preset that include all planning sites

      --startup, --setup
        Opens a chromium process through a terminal while putting its output
        somewhere else. This lets the use open it first time, without
        killing a terminal.

      -s, -ss, --stylishSync
        Runs the stylish sync program
         - WARNING: will kill all chromium processes

      -h, --help
        Displays this help message

      -y, --youtube
        Launches chrome into youtube

      <default>
        With no argument, xchrome will just open up a new window of chromium. The same as `xchrome -n`
    "
  }
  if [[ $# -eq 0 ]]; then
    chromium

  fi; while [[ $# -gt 0 ]]; do
    key="$1"
    case $key in

      -b|--booga)
        chromium time.is
        inbox 0; inbox 1; gmail 2
        chromium "$ymail"
        chromium "$slack"
        chromium "$discord"
        chromium
        chromium time.is
        chromium "$keep"
        chromium "$calendar"
        chromium "$habitica"
        chromium "$toggl"
      ;;

      -c|--comms|--communications)
        chromium time.is
        inbox 0; inbox 1; gmail 2
        chromium "$ymail"
        chromium "$slack"
        chromium "$discord"
      ;;

      --grip)
        chromium "http://localhost:6419/"
      ;;

      -g|--gmail)
        gmail "$2"
        shift
      ;;

      -ha|--hangouts|-H)
        chromium --profile-directory=Default --app-id=knipolnnllmklapflnccelgolnpehhpl
      ;;

      -i|--inbox)
        inbox "$2"
        shift
      ;;

      -m|--music)
        chromium "$music"
      ;;

      -n|--new)
        chromium
      ;;

      -p|--plan|--planning)
        chromium time.is
        chromium "$keep"
        chromium "$calendar"
        chromium "$habitica"
        chromium "$toggl"
      ;;

      --startup|--setup)
        chromium > /dev/null 2>&1 &
      ;;

      -s|-ss|--stylishSync)
        stylishFolder="/home/alex/.config/chromium/Default/IndexedDB/chrome-extension_fjnbnpbmkenffdnngjfgmeleoegfcffe_0.indexeddb.leveldb"
        echo "This terminal kills all chromium processess. Are you sure you want to continue? [y/n]: "
        getyn; if [[ "$yn" == "y" ]]; then
          case "$2" in
            push)
              killall chromium
              cd $stylishFolder
              git pull
              git add *
              git commit -m 'Automatic commit: "$now"'
              git push
              cd
            ;;
            pull)
              killall chromium
              cd $stylishFolder
              git pull
            ;;
            *)
              echo "You must designate push or pull for the stylish xprogram."
            ;;
          esac
        fi
        shift
      ;;

      -h|--help)
        chromeHelp
      ;;

      -y|--youtube)
        chromium "https://youtube.com"
      ;;

      *)
        chromeHelp
      ;;
    esac
    shift
  done
