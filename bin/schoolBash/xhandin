# T2.Lshell
# requirements -
  # access to the school servers

# import -

# notes -

# code -
  # FUNCTIONS
xhandin () {
  xhandinHelp () {
    echo "
      -h|--help
        Displays this help message

      <default>
        This xprogram finds a .handin file and executes it.
        File needs to have the following syntax:
          Bash
          ~/[class]/bin/handin [all file names (including makefile)]
    "
  }

  if [ $# -eq 0 ]; then # If there are 0 arguments - i.e. only the script name
    if [ -f handin]; then
      . handin
    else
      xhandinHelp
    fi
  fi

  while [ $# -gt 0 ]; do # While there are more than 0 arguments
  key="$1"
    case $key in
      -h|--help)
        xhandinHelp
      ;;

      *)
        xhandinHelp
      ;;
    esac
    shift
  done
}
