# - requirements -
# curl
# upower

#battery -
  b1='echo |-------------------------------------------------------|- BATTERY -|-------------------------------------------------------|'
  alias bat='$b1;upower -i /org/freedesktop/UPower/devices/battery_BAT1| grep -E "state|to\ full|percentage"'
  alias batInfo='upower -i /org/freedesktop/UPower/devices/battery_BAT1'
#Weather -
  w1='echo |- - - - - - - - - - - - - - - - - - - - - - - - - - - -|- WEATHER -|- - - - - - - - - - - - - - - - - - - - - - - - - - - -|'
  w2='echo |---------------------------------------------------------------------------------------------------------------------------|'
  alias weather='$w2;$w1;$w2;curl wttr.in'
#time/date -
  alias curtime='date'
  alias now='date'
  alias curTime='date'
