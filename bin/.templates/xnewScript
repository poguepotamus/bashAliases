#!/bin/bash
# T=2.L=shell
# requirements -

# import -

# notes -

# code -
  # FUNCTIONS
  scriptHelp () {
    echo "
      -a|--alphabetical
        This should include a discription of all of the arguements

      -s|--spaces
        Spaces should be also seperating theses for the sake of the users eyes

      -h|--help
        Displays this help message

      <default>
        With no argument, here should be said what happens lol xd
    "
  }

  if [[ $# -eq 0 ]]; then # If there are 0 arguments - i.e. only the script name
  fi
  while [[ $# -gt 0 ]]; do # While there are more than 0 arguments
    key="$1"
    case $key in
      -a|--alphabetical)
        echo "These should be sorted alphabetical"
      ;;

      -s|--spaces)
        echo "With spaces inbetween so sort eaily"
        echo "if a   case uses \$2, then it is nessesary to use shift"
        shift
      ;;

      -h|--help)
        scriptHelp
      ;;

      *)
        scriptHelp
      ;;
    esac
    shift
  done
