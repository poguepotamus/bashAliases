# code -
  # preferences -
    alias ll="ls -lF --color"
    alias lall="ls -alF --color"
    alias lal="lall"
    alias del="echo \"rm -rf\" "$1""
  # git -
    alias glog='git log --oneline --decorate --graph --all'
  # python -
    alias howWheel="echo 'python setup.py sdist bdist_wheel'"
    alias piping="echo 'pip freeze | xargs pip uninstall -y'"
  # reload -
    alias updateBash=". ~/customBash/bashAliases"
    alias updatebash="updateBash"
    alias update="updateBash"
    alias bashreset="reset; wait; updateBash"
  # misc programs -
    alias pdf="evince"
    alias work="libreoffice --writer"
  # misc -
    alias ipconfig="dig +short myip.opendns.com @resolver1.opendns.com"
