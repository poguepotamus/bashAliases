# import -
bin="/home/alex/customBash/bin"
# . "$bin"/

# notes -
  # work-on
    # Standby

# code -
  # testing -
    alias FTM="echo This is the First test message; wait; alias test=STM"
    alias STM="echo This is the Second test message; wait; alias test=FT"
    alias test="FTM"
  # preferences -
    alias ll="ls -l"
    alias lall="ls -l -a"
    alias lal="lall"
    alias del="echo \"rm -rf\" "$1""
  # git -
    alias gps='git push'
    alias gpl='git pull'
    alias ga='git add'
    alias gm='git commit -m'
    alias gs='git status'
  # reload -
    alias updateBash=". /home/alex/customBash/bashAliases"
    alias updatebash="updateBash"
    alias update="updateBash"
    alias bashreset="reset; wait; updateBash"
  # misc programs -
    alias pdf="evince"
    alias work="libreoffice --writer"
    alias chrome="chromium"
  # misc -
    alias ipconfig="dig +short myip.opendns.com @resolver1.opendns.com"
    alias xclear=". ~/customBash/bin/scripts/xlines"

