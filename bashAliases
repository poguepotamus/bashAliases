  #bash -
    quitProgram () {
      kill -INT $$
      clear
    }
    numInDir () {
      find "$1"/* -maxdepth 0 -type d | wc -l
    }
    numDrives () {
      numInDir $mntDir
    }
    #testing -
      checkVar=''
      setCheck () {
        checkVar=$1
      }
      check () {
        eval checking=\$$checkVar
        echo "$checking"
      }
