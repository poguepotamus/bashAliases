# requirements -
  # Linux Shell
  # All xprograms that are imported below

# import -
  customBashFolder="/home/alex/customBash"
  bashAliasesFiles="$customBashFolder"/bashAliases
  programsFolder=""$customBashFolder"/bin"
# . "$programsFolder"/xinfo
# . "$programsFolder"/

# notes -
  # workon
    # Standby

# code -
  # testing -
    alias FTM="echo This is the First test message; wait; alias test=STM"
    alias STM="echo This is the Second test message; wait; alias test=FT"
    alias test="FTM"
  # preferences -
    alias ll="ls -l"
    alias lall="ls -l -a"
    alias lal="lall"
    alias del="echo \"rm -rf\" "$1""
  # git -
    alias gp='git push'
    alias ga='git add'
    alias gm='git commit -m'
    alias gs='git status'
  # reload -
    alias updateBash=". /home/alex/customBash/bashAliases"
    alias updatebash="updateBash"
    alias update="updateBash"
    alias bashreset="reset; wait; updateBash"
  # misc programs -
    alias pdf="evince"
    alias work="libreoffice --writer"
    alias chrome="chromium"
